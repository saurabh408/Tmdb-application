<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:weightSum="10"
    tools:context="com.example.saurabhs.moviesapp.DetailActivityFragment"
    tools:showIn="@layout/activity_detail">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/movieNameView"
            android:background="@color/accent_material_light"
            android:textColor="#FFFFFF"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="35dp"
            android:text="@string/movie_name"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.50"
        android:weightSum="1"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/posterView"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/terminator_92"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2015"
                android:id="@+id/yearView"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textColor="#7e7e7e"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="120min"
                android:id="@+id/durationView"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:textColor="#7e7e7e"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="8.1/10"
                android:id="@+id/ratingView"
                android:layout_weight="0.05"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Mark As Favorite"
                android:id="@+id/markAsFavButton"
                android:layout_marginLeft="22dp"
                android:textSize="8dp"
                android:background="@color/accent_material_dark"
                android:textColor="#7e7e7e"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2.98"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/movie_overview"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10px"
            android:layout_weight="0.61"
            android:textSize="35px"/>
    </LinearLayout>


</LinearLayout>